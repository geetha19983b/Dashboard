@model DashBoard.Models.PrblmMangVM

@*<h3>Problem Management Summary</h3>*@


<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary small">
            <!-- Default panel contents -->
            <div class="panel-heading"><i class="fa fa-bar-chart-o fa-fw"></i>Problem Management Summary</div>
            
            
            <div class="row">
                <div class="col-md-push-2 col-md-6">
                    @if (Model.ProblmSummaries.Count > 0)
                    {
                        var meta = Model.ProblmSummaries.First();
                    <table class="table table-condensed table-responsive table-striped table-bordered table-hover">
                        <thead>
                            <tr class="info">
                                <th class="col-sm-1">
                                    @Html.DisplayNameFor(m => meta.Summary)
                                </th>
                                <th class="col-sm-1">
                                    @Html.DisplayNameFor(m => meta.Nov2015)
                                </th>
                                <th class="col-sm-1">
                                    @Html.DisplayNameFor(m => meta.Dec2015)
                                </th>
                                <th class="col-sm-1">
                                    @Html.DisplayNameFor(m => meta.Jan2016)
                                </th>
                                <th class="col-sm-1">
                                    @Html.DisplayNameFor(m => meta.Feb2016)
                                </th>
                                <th class="col-sm-1">
                                    @Html.DisplayNameFor(m => meta.Mar2016)
                                </th>


                            </tr>
                        </thead>
                        @foreach (var item in Model.ProblmSummaries)
                        {

                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Summary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nov2015)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Dec2015)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Jan2016)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Feb2016)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Mar2016)
                                </td>

                            </tr>
                        </tbody>
                        }
                    </table>
                    }
                    else
                    {
                    @:No Problems Available
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if (Model.WeeklyPrblmManag.Count > 0)
                    {
                        var meta = Model.WeeklyPrblmManag.First();
                        <table class="table table-condensed table-responsive table-striped table-bordered table-hover">
                            <thead>
                                <tr class="info">
                                    <th class="col-sm-1">
                                        @Html.DisplayNameFor(m => meta.Problem)
                                    </th>
                                    <th class="col-sm-1">
                                        @Html.DisplayNameFor(m => meta.OpenedOn)
                                    </th>
                                    <th class="col-sm-1">
                                        @Html.DisplayNameFor(m => meta.Tower)
                                    </th>
                                    <th class="col-sm-1">
                                        @Html.DisplayNameFor(m => meta.Description)
                                    </th>
                                    <th class="col-sm-1">
                                        @Html.DisplayNameFor(m => meta.StatusandETA)
                                    </th>



                                </tr>
                            </thead>
                            @foreach (var item in Model.WeeklyPrblmManag)
                            {

                                <tbody>
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Problem)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.OpenedOn)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Tower)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StatusandETA)
                                        </td>


                                    </tr>
                                </tbody>
                            }
                        </table>
                    }
                    else
                    {
                        @:No Problems Available
                    }
                </div>
            </div>

        </div>
    </div>
</div>